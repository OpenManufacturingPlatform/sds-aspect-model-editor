<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.bosch.bci.foundation</groupId>
    <artifactId>foundation-parent</artifactId>
    <version>18.8.0</version>
  </parent>

  <name>Bosch Aspect Model Editor - Frontend</name>
  <groupId>com.bosch.bci.ame</groupId>
  <artifactId>ame-ui</artifactId>
  <version>DEV-SNAPSHOT</version>

  <properties>
    <skip.whitesource>false</skip.whitesource>
    <skip.generate.3rd-party-sources.zip>false</skip.generate.3rd-party-sources.zip>
    <whitesource.project-token>719a6511c6d54a4284b47b023a0249e5f4505a6bf0f14c8fbf58ab51fcb8d2ba
    </whitesource.project-token>

    <thirdPartyDependencyName>DisclosureDoc</thirdPartyDependencyName>

    <!-- TODO: Should be changed to AME-->
    <sonar.projectKey>RBS_com.bosch.bci.bame:bame-ui</sonar.projectKey>
    <sonar.projectName>Aspect Model Editor - Frontend</sonar.projectName>
    <sonar.typescript.node>${project.basedir}/node/node</sonar.typescript.node>
    <sonar.nodejs.executable>${project.basedir}/node/node</sonar.nodejs.executable>
    <sonar.javascript.lcov.reportPaths>${project.basedir}/coverage/lcov.info</sonar.javascript.lcov.reportPaths>
    <sonar.sources>
      apps/bame/src,libs/api/src,libs/aspect-exporter/src,libs/cache/src,libs/connection/src,libs/editor/src,libs/instantiator/src,libs/meta-model/src,libs/mx-graph/src,libs/rdf/src,libs/settings-dialog/src,libs/shared/src,libs/vocabulary/src,pom.xml
    </sonar.sources>
    <sonar.typescript.tsconfigPath>tsconfig.sonar.json</sonar.typescript.tsconfigPath>
    <sonar.coverage.exclusions>
      libs/**,
      environments/**,
      apps/bame/src/main.ts,
      apps/bame/src/**/*.spec.ts
      apps/bame/src/app/app.component.ts
      apps/bame/src/app/components/editor-canvas/sidebar/sidebar.component.ts
    </sonar.coverage.exclusions>
    <sonar.exclusions>
      apps/bame/src/assets/**,
      apps/bame/src/**/*.spec.ts,
      libs/api/src/**/*.spec.ts,
      libs/aspect-exporter/src/**/*.spec.ts,
      libs/cache/src/**/*.spec.ts,
      libs/connection/src/**/*.spec.ts,
      libs/editor/src/**/*.spec.ts,
      libs/instantiator/src/**/*.spec.ts,
      libs/meta-model/src/**/*.spec.ts,
      libs/mx-graph/src/**/*.spec.ts,
      libs/rdf/src/**/*.spec.ts,
      libs/settings-dialog/src/**/*.spec.ts,
      libs/shared/src/**/*.spec.ts,
      libs/vocabulary/src/**/*.spec.ts,
    </sonar.exclusions>

    <frontend-maven-plugin.version>1.8.0</frontend-maven-plugin.version>
    <node.version>14.16.0</node.version>

    <scm.connection>scm:git:ssh://git@github.com:bci-oss/rbs-aspect-model-editor.git</scm.connection>
  </properties>

  <scm>
    <connection>${scm.connection}</connection>
    <developerConnection>${scm.connection}</developerConnection>
  </scm>

  <build>
    <plugins>
      <plugin>
        <groupId>com.github.eirslett</groupId>
        <artifactId>frontend-maven-plugin</artifactId>
        <version>${frontend-maven-plugin.version}</version>
        <executions>
          <execution>
            <id>install node</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>install-node-and-npm</goal>
            </goals>
            <configuration>
              <environmentVariables>
                <strict-ssl>false</strict-ssl>
              </environmentVariables>
              <nodeDownloadRoot>${frontend.nodeDownloadRoot}</nodeDownloadRoot>
              <nodeVersion>v${node.version}</nodeVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>fossid</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.bosch.bios.bot.fossid</groupId>
            <artifactId>fossid-tools-maven-plugin</artifactId>
            <configuration>
              <projectCode>BCI-ECO-BAME-Frontend</projectCode>
              <globPatterns>
                <globPattern>apps/bame/src/app</globPattern>
                <globPattern>libs/api/src/lib</globPattern>
                <globPattern>libs/aspect-exporter/src/lib</globPattern>
                <globPattern>libs/cache/src/lib</globPattern>
                <globPattern>libs/connection/src/lib</globPattern>
                <globPattern>libs/editor/src/lib</globPattern>
                <globPattern>libs/instantiator/src/lib</globPattern>
                <globPattern>libs/meta-model/src/lib</globPattern>
                <globPattern>libs/mx-graph/src/lib</globPattern>
                <globPattern>libs/rdf/src/lib</globPattern>
                <globPattern>libs/settings-dialog/src/lib</globPattern>
                <globPattern>libs/shared/src/lib</globPattern>
                <globPattern>libs/vocabulary/src/lib</globPattern>
              </globPatterns>
              <prefix>BAME-Frontend</prefix>
            </configuration>
            <executions>
              <execution>
                <id>scan</id>
                <phase>process-sources</phase>
                <goals>
                  <goal>scan</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>copy-reports</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>unpack-reports-zip</id>
                <phase>validate</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>${project.groupId}</groupId>
                      <artifactId>${project.artifactId}</artifactId>
                      <version>${project.version}</version>
                      <type>zip</type>
                      <classifier>reports</classifier>
                      <overWrite>true</overWrite>
                      <outputDirectory>${project.build.directory}/reports</outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>assemble-reports</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <id>reports-zip</id>
                <phase>install</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>${project.basedir}/assembly/reports-assembly.xml</descriptor>
                    <descriptor>${project.basedir}/assembly/3rd-party-sources-assembly.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>attach-resources</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>attach-artifacts</id>
                <phase>package</phase>
                <goals>
                  <goal>attach-artifact</goal>
                </goals>
                <configuration>
                  <artifacts>
                    <artifact>
                      <file>${basedir}/electron/ame-ui.zip</file>
                      <type>zip</type>
                      <classifier>electron</classifier>
                    </artifact>
                  </artifacts>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
