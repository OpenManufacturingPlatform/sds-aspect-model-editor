<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>reports</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>${project.build.directory}</baseDirectory>
  <fileSets>
    <!-- Test reports -->
    <fileSet>
      <directory>cypress-reports/</directory>
      <outputDirectory>/test-reports/e2e</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>coverage</directory>
      <outputDirectory>/test-reports/e2e/coverage</outputDirectory>
    </fileSet>
    <!-- FOSSID report -->
    <fileSet>
      <directory>foss-reports/</directory>
      <includes>
        <include>fossidReport.html</include>
        <include>fossid-compliance.status</include>
        <include>tool-report.html</include>
      </includes>
      <outputDirectory>/legal-reports</outputDirectory>
    </fileSet>
    <!-- whitesource disclosure report -->
    <fileSet>
      <directory>whitesource-tools/</directory>
      <includes>
        <include>3rdparty*.pdf</include>
        <include>compliance.log</include>
      </includes>
      <outputDirectory>/legal-reports</outputDirectory>
    </fileSet>
    <!-- BOM -->
    <fileSet>
      <directory>whitesource-tools/</directory>
      <outputDirectory>/bom-ui</outputDirectory>
      <includes>
        <include>bom.xml</include>
      </includes>
    </fileSet>
    <!-- Sonar scan report -->
    <fileSet>
      <directory>sonar-reports/</directory>
      <includes>
        <include>quality-gate-report.html</include>
        <include>sonarqube.qball.status</include>
      </includes>
      <outputDirectory>/quality-reports</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
